<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-bar">
			<h1>EAT DA BURGER!</h1>
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
			<!-- Loop through burger data -->
				{{#each burger_data}}
					{{#unless this.devoured}}
				<div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.burger_name}}</pre>
				</div>
			<div class="col-xs-3 text-center">
				<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
				<!-- Send data back to server, unless this.devoured=true -->
					<input type="hidden" name="burger_id" type="text" value="{{this.id}}">
					<br>
					<button type="submit" class="btn btn-default">DEVOUR IT!</button>
				</form>
			</div>
			{{/unless}}
			{{/each}}
			</div>
		</div>

		<div class="col-xs-6 text-center" class="task">
			{{#each burger_data}}
				{{#if this.devoured}}
		 			<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
				{{/if}}
			{{/each}}	
		</div>
	</div>
</div>

<!-- submit new burger -->
<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter-selection">
		<form action="/burgers/create" method="POST">
			<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
			<button type="submit" class="btn btn-primary" id="text-center-button">SUBMIT</button>
		</form>	
		<p>Enter the name of a burger you would like to eat!</p>
		</div>
	</div>
</div>